<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="menuData"
            type="com.example.sidedish.MenuData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="146dp">

        <ImageView
            android:id="@+id/iv_home_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:updateImage="@{menuData.representImages}" />

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="190dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{menuData.productName}"
            android:textColor="#010101"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_home_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_body"
            android:layout_width="190dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@{menuData.description}"
            android:textColor="#828282"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_home_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_discountPrice"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:gravity="center_vertical"
            android:text="@{menuData.price}"
            android:textColor="#010101"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_home_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_price"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="72dp"
            android:gravity="center_vertical"
            android:textColor="#828282"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_home_discountPrice"
            app:layout_constraintTop_toTopOf="parent"
            bind:updateTextWithStroke="@{menuData.discountPrice}" />

        <TextView
            android:id="@+id/tv_home_event"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/bg_event_badge"
            app:layout_goneMarginLeft="20dp"
            android:gravity="center"
            android:text="@{menuData.eventInfo}"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:textColor="#F2E7FE"
            android:textSize="12sp"
            bind:updateVisible="@{menuData.eventInfo}"
            app:layout_constraintLeft_toRightOf="@+id/iv_home_image"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>